---
import Navbar from '../components/Navbar.astro';

interface Props {
	title: string;
	description?: string;
    image?: string;
}

const { 
    title, 
    description = "Bursa'da profesyonel ev tadilatı, ofis yenileme, banyo ve mutfak dekorasyon hizmetleri. Tecrübeli usta kadrosu, zamanında teslim ve sabit fiyat garantisi.",
    image = "/social-share.jpg" // Varsayılan paylaşım görseli
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);

// Schema.org Structured Data for Local Business
const schema = {
  "@context": "https://schema.org",
  "@type": "HomeAndConstructionBusiness",
  "name": "İnsaat Tech Yapı & Tadilat",
  "image": "https://bursa-insaat-tadilat.com/logo.png",
  "email": "info@insaattech.com",
  "address": {
    "@type": "PostalAddress",
    "addressLocality": "Nilüfer",
    "addressRegion": "Bursa",
    "addressCountry": "TR"
  },
  "description": description,
  "openingHoursSpecification": {
    "@type": "OpeningHoursSpecification",
    "dayOfWeek": [
      "Monday",
      "Tuesday",
      "Wednesday",
      "Thursday",
      "Friday",
      "Saturday"
    ],
    "opens": "09:00",
    "closes": "19:00"
  },
  "priceRange": "₺₺"
};
---

<!doctype html>
<html lang="tr" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
        <link rel="sitemap" href="/sitemap-index.xml" />
        
        <!-- SEO Meta Tags -->
        <title>{title}</title>
        <meta name="description" content={description} />
        <link rel="canonical" href={canonicalURL} />
        <meta name="robots" content="index, follow" />

        <!-- Open Graph / Facebook -->
        <meta property="og:type" content="website" />
        <meta property="og:url" content={Astro.url} />
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <meta property="og:image" content={image} />

        <!-- Twitter -->
        <meta property="twitter:card" content="summary_large_image" />
        <meta property="twitter:url" content={Astro.url} />
        <meta property="twitter:title" content={title} />
        <meta property="twitter:description" content={description} />
        <meta property="twitter:image" content={image} />

        <!-- JSON-LD Structured Data -->
        <script type="application/ld+json" set:html={JSON.stringify(schema)} />
        
        <!-- Google Fonts: Unbounded (Display), Manrope (Body), JetBrains Mono (Technical) -->
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;500;700&family=Manrope:wght@400;500;700;800&family=Unbounded:wght@400;500;700;900&display=swap" rel="stylesheet">
	<body class="bg-stone-50 text-stone-900 font-sans antialiased relative min-h-screen selection:bg-primary selection:text-white">
        
        <!-- Top Navigation Bar -->
        <Navbar />
        
        <!-- Technical Grid Background (Subtle Grey on White) -->
        <div class="fixed inset-0 pointer-events-none z-0 opacity-[0.4]" 
             style="background-size: 40px 40px; background-image: linear-gradient(to right, #E5E5EA 1px, transparent 1px), linear-gradient(to bottom, #E5E5EA 1px, transparent 1px);">
        </div>

        <!-- Main Content -->
        <div class="relative z-10">
		    <slot />
        </div>



	</body>
</html>

<style is:global>
    /* Custom Scrollbar - Industrial Clean Look */
    ::-webkit-scrollbar {
        width: 12px;
        background: #F5F5F7;
    }
    ::-webkit-scrollbar-track {
        background: #F5F5F7;
        border-left: 1px solid #E5E5EA;
    }
    ::-webkit-scrollbar-thumb {
        background: #C7C7CC; /* Aluminum */
        border: 2px solid #F5F5F7;
    }
    ::-webkit-scrollbar-thumb:hover {
        background: #0055FF; /* Cobalt Blue on hover */
    }
</style>
