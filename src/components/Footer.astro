---
const currentYear = new Date().getFullYear();

interface Props {
    simple?: boolean;
}

const { simple = false } = Astro.props;
---

<footer class={`bg-stone-50 border-t border-stone-200 ${simple ? 'pt-10 pb-6' : 'pt-10 pb-6'} text-sm font-mono`}>
    <div class="max-w-screen-xl mx-auto px-6">
        <div class="flex flex-col md:flex-row justify-between items-center gap-6 md:gap-12">
            
            {/* Brand & Tagline - Compact */}
            <div class="text-center md:text-left">
                <a href="/" class="block group mb-3">
                    <span class="block text-xl font-display font-black text-red-600 tracking-tighter leading-none mb-0.5">KIRMIZI</span>
                    <span class="block text-lg font-display font-black text-stone-900 tracking-tighter leading-none">İNŞAAT</span>
                </a>
                <p class="text-stone-500 text-xs">
                    Bursa'nın yeni nesil yapı çözümleri.
                </p>
            </div>

            {/* Compact Quick Links */}
            <div class="flex flex-wrap justify-center gap-6 md:gap-8 text-stone-600 font-bold text-xs uppercase tracking-wider">
                <a href="/" class="hover:text-primary transition-colors">Ana Sayfa</a>
                <a href="/projects" class="hover:text-primary transition-colors">Projeler</a>
                <a href="/calculator" class="hover:text-primary transition-colors">Hesapla</a>
                <a href="/contact" class="hover:text-primary transition-colors">İletişim</a>
            </div>

            {/* Social / Contact Icons */}
            <div class="flex items-center gap-4">
                <a href="#" class="w-8 h-8 flex items-center justify-center rounded-full bg-stone-200 text-stone-600 hover:bg-primary hover:text-white transition-all">
                    <span class="sr-only">Instagram</span>
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path><line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line></svg>
                </a>
                <a href="tel:05551510465" class="w-8 h-8 flex items-center justify-center rounded-full bg-stone-200 text-stone-600 hover:bg-primary hover:text-white transition-all">
                   <span class="sr-only">Telefon</span>
                   <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path></svg>
                </a>
            </div>

        </div>

        {/* Minimal Copyright Line - Conditionally Rendered */}
        {!simple && (
            <div class="mt-8 pt-6 border-t border-stone-200 flex flex-col items-center text-[10px] text-stone-400 uppercase tracking-widest gap-2">
                <div>
                    &copy; 2026 KIRMIZI İNŞAAT
                </div>
                <div>
                    TASARLAYAN NASIR KIRMIZI 
                </div>
            </div>
        )}
    </div>
</footer>
