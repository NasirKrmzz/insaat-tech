---
import { Image } from 'astro:assets';
import videoBg from '../assets/video/Tadilat1.webm';
---

<section class="relative h-screen w-full overflow-hidden bg-stone-950 flex items-center">

    <!-- Video Background -->
    <div class="absolute inset-0 z-0">
        <div class="absolute inset-0 bg-stone-900 z-0">
            <!-- Fallback background color while video loads -->
        </div>
        
        <video
            autoplay
            loop
            muted
            playsinline
            class="absolute inset-0 w-full h-full object-cover z-10"
        >
            <source src={videoBg} type="video/webm" />
            <!-- MP4 fallback would go here if available -->
        </video>
        
        <!-- Cinematic Overlay -->
        <div class="absolute inset-0 bg-black/40 z-20"></div>
    </div>

    <div class="max-w-screen-xl mx-auto relative z-30 px-4 w-full pt-32">

        <!-- Headline -->
        <div class="relative">
            <h1 class="text-6xl md:text-8xl lg:text-9xl font-display font-black text-white tracking-tight leading-[1.2] mb-8 animate-fade-in-up">
                ŞEFFAF<span class="text-primary">.</span><br />
                DÜRÜST<span class="text-primary">.</span><br />
                SAĞLAM<span class="text-primary">.</span>
            </h1>

            <!-- Stamped Badge -->
            <div class="absolute top-1/4 right-0 md:right-20 border-4 border-white text-white px-6 py-2 rounded-sm font-display font-bold text-xl md:text-3xl uppercase tracking-widest hidden md:block mix-blend-overlay animate-badge-pop">
                SABİT FİYAT
            </div>
        </div>

        <p class="mt-8 text-xl md:text-2xl text-stone-200 font-mono max-w-2xl leading-relaxed border-l-2 border-primary pl-6 animate-fade-in opacity-0" style="animation-delay: 0.4s; animation-fill-mode: forwards;">
            Bursa'da A'dan Z'ye <span class="text-white font-bold">profesyonel tadilat</span> ve <span class="text-white font-bold">tamirat hizmetleri</span>. Sözleşmeli fiyat, teknik şeffaflık ve zamanında teslim garantisi.
        </p>

        <!-- Buttons -->
        <div class="flex flex-wrap gap-0 mt-12 animate-fade-in-up opacity-0" style="animation-delay: 0.6s; animation-fill-mode: forwards;">
            <a href="/contact" class="group relative px-8 py-5 bg-white/10 backdrop-blur-md border border-white/20 text-white font-display font-bold text-lg uppercase tracking-wide overflow-hidden hover:bg-white hover:text-black transition-colors">
                <span class="relative z-10 flex items-center gap-2">
                    HEMEN FİYAT AL
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5"><path d="M5 12h14M12 5l7 7-7 7" /></svg>
                </span>
            </a>
            <a href="/calculator" class="group px-8 py-5 bg-transparent border-t border-b border-r border-white/20 text-white font-mono font-bold uppercase tracking-wide hover:bg-white/10 transition-all">
                MALİYET HESAPLA
            </a>
        </div>

    </div>
</section>

<style>
    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(50px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
    }

    @keyframes badgePop {
        0% {
            opacity: 0;
            transform: scale(2) rotate(-20deg);
        }
        100% {
            opacity: 1;
            transform: scale(1) rotate(-5deg);
        }
    }

    .animate-fade-in-up {
        animation: fadeInUp 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards;
    }

    .animate-fade-in {
        animation: fadeIn 0.8s ease-out forwards;
    }

    .animate-badge-pop {
        animation: badgePop 0.8s cubic-bezier(0.34, 1.56, 0.64, 1) 0.5s forwards;
        opacity: 0; /* Start hidden */
        transform: rotate(-5deg); /* End state fallback */
    }
</style>
