---
import Layout from '../layouts/Layout.astro';
import { motion } from "framer-motion";

const PROJECTS = [
  {
    id: "REF_2024_01",
    title: "DAİRE TADİLATI / BADEMLİ",
    category: "KOMPLE YENİLEME",
    status: "TAMAMLANDI",
    image: "https://images.unsplash.com/photo-1600607686527-6fb886090705?auto=format&fit=crop&q=80&w=1200",
    desc: "130m² dairenin elektrik ve su tesisatı yenilendi, banyo ve mutfak modern standartlara getirildi.",
    specs: ["130 M²", "45 GÜN", "ANAHTAR TESLİM"]
  },
  {
    id: "REF_2024_02",
    title: "OFİS YENİLEME / NİLÜFER",
    category: "TİCARİ DEKORASYON",
    status: "TESLİM EDİLDİ",
    image: "https://images.unsplash.com/photo-1497366216548-37526070297c?auto=format&fit=crop&q=80&w=1200",
    desc: "Eski zeminler söküldü, boya ve alçı işleri yapıldı, yeni aydınlatma sistemi kuruldu.",
    specs: ["85 M²", "15 GÜN", "BOYA & TADİLAT"]
  },
  {
    id: "REF_2024_03",
    title: "MUTFAK & BANYO / ÖZLÜCE",
    category: "KONUT",
    status: "DEVAM EDİYOR",
    image: "https://images.unsplash.com/photo-1556911220-e15b29be8c8f?auto=format&fit=crop&q=80&w=1200",
    desc: "Su tesisatı komple değişti, zemin seramikleri yenilendi ve özel ölçü dolap montajı yapıldı.",
    specs: ["35 M²", "12 GÜN", "TESİSAT & MONTAJ"]
  },
  {
    id: "REF_2024_04",
    title: "ÇATI AKTARMA / BEŞEVLER",
    category: "DIŞ CEPHE",
    status: "TAMAMLANDI",
    image: "https://images.unsplash.com/photo-1503387762-592deb58ef4e?auto=format&fit=crop&q=80&w=1200",
    desc: "Binanın eskiyen kiremitleri değiştirildi, su yalıtımı yapıldı ve yağmur olukları yenilendi.",
    specs: ["200 M²", "10 GÜN", "ÇATI ONARIM"]
  }
];
---

<Layout 
    title="YENİLEME İŞLERİMİZ | İNSAAT TECH"
    description="Bursa'da tamamladığımız daire tadilatı, ofis yenileme ve çatı onarım projelerimizi inceleyin. Öncesi ve sonrası fotoğraflarla referanslarımız."
>
    <main class="min-h-screen pt-32 pb-24 px-6 bg-stone-50">
        
        <div class="max-w-screen-xl mx-auto">
            {/* Header */}
            <div class="mb-20 border-b border-stone-200 pb-12">
                <div class="flex items-center gap-4 mb-4 opacity-50">
                    <span class="w-2 h-2 bg-primary"></span>
                </div>
                <h1 class="text-3xl md:text-6xl font-display font-black text-stone-900 tracking-tighter uppercase leading-tight">
                    BİTEN TAMİRAT VE<br/>
                    <span class="text-stone-400">TADİLAT PROJELERİMİZ</span><span class="text-primary">.</span>
                </h1>
            </div>

            {/* Grid */}
            <div class="grid grid-cols-1 md:grid-cols-2 gap-0 border-t border-l border-stone-200">
                {PROJECTS.map((project, index) => (
                    <a href="#" class="group relative block border-r border-b border-stone-200 bg-white hover:z-10 transition-all duration-500 hover:shadow-2xl">
                        
                        {/* Image Container */}
                        <div class="aspect-[4/3] overflow-hidden relative">
                            <div class="absolute inset-0 bg-stone-900/10 group-hover:bg-transparent transition-colors z-10"></div>
                            <img 
                                src={project.image} 
                                alt={project.title} 
                                class="w-full h-full object-cover grayscale group-hover:grayscale-0 transition-all duration-700 transform group-hover:scale-105"
                            />
                            
                            {/* Overlay Details */}
                            <div class="absolute top-4 right-4 z-20 bg-white/90 backdrop-blur-sm px-3 py-1 border border-stone-200">
                                <span class="text-[10px] font-mono font-bold text-stone-900">{project.status}</span>
                            </div>
                        </div>

                        {/* Content */}
                        <div class="p-8 relative bg-white">
                            <div class="flex justify-between items-start mb-6">
                                <span class="font-mono text-xs text-stone-400">{project.category}</span>
                            </div>

                            <h3 class="text-2xl font-display font-bold text-stone-900 mb-4 group-hover:text-primary transition-colors">
                                {project.title}
                            </h3>
                            
                            <p class="text-stone-500 font-sans text-sm mb-8 leading-relaxed line-clamp-2">
                                {project.desc}
                            </p>

                            {/* Specs Footer */}
                            <div class="flex gap-4 border-t border-stone-100 pt-6">
                                {project.specs.map(spec => (
                                    <span class="text-[10px] font-mono text-stone-400 uppercase tracking-wider border border-stone-200 px-2 py-1">
                                        {spec}
                                    </span>
                                ))}
                            </div>
                            
                            {/* Hover Arrow */}
                            <div class="absolute bottom-8 right-8 opacity-0 group-hover:opacity-100 transition-all duration-300 transform translate-x-[-10px] group-hover:translate-x-0">
                                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-primary"><path d="M5 12h14M12 5l7 7-7 7"/></svg>
                            </div>
                        </div>
                    </a>
                ))}
            </div>

             <div class="mt-20 text-center border p-12 border-stone-200 bg-stone-100/50">
                <h3 class="font-display font-bold text-2xl text-stone-900 mb-4">TAMİRAT VEYA TADİLAT İHTİYACINIZ MI VAR?</h3>
                <a href="/calculator" class="inline-block bg-primary text-white px-8 py-4 font-bold font-display uppercase tracking-widest hover:bg-stone-900 transition-colors">
                    HIZLI FİYAT ALIN
                </a>
            </div>

        </div>
    </main>
</Layout>
